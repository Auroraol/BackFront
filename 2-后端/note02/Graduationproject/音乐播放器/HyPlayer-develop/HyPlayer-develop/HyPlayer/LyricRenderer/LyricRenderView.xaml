<UserControl
    x:Class="HyPlayer.LyricRenderer.LyricRenderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HyPlayer.LyricRenderer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Unloaded="LyricRenderView_OnUnloaded"
    mc:Ignorable="d">


    <win2d:CanvasAnimatedControl
        x:Name="LyricView"
        DoubleTapped="LyricView_DoubleTapped"
        Draw="LyricView_Draw"
        PointerExited="LyricView_OnPointerExited"
        PointerMoved="LyricView_OnPointerMoved"
        PointerPressed="LyricView_OnPointerPressed"
        PointerReleased="LyricView_PointerReleased"
        PointerWheelChanged="LyricView_OnPointerWheelChanged"
        SizeChanged="LyricView_OnSizeChanged" />
</UserControl>
