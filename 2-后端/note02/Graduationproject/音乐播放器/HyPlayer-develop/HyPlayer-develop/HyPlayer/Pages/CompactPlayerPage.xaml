    </Page.Resources>
    <Grid
        Background="{ThemeResource GridPlayBarBackgroundBlur}"
        PointerEntered="Grid_PointerEntered"
        PointerExited="Grid_PointerExited">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="2" Background="Transparent" />
            <Grid
                x:Name="TitleGrid"
                Background="Transparent"
                Opacity="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource SystemControlForegroundBaseHighBrush}"
                    Text="{x:Bind NowPlayingName, Mode=OneWay}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="4,0,64,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                    Text="{x:Bind NowPlayingArtists, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis" />
            </Grid>
            <Grid
                x:Name="LyricGrid"
                Grid.Row="1"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.RowSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
                <lyric:LyricControl
                    x:Name="LyricControl"
                    Height="500"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    WordWrapping="NoWrap" />

                <Viewbox
                    x:Name="LyricViewBox"
                    MaxHeight="71"
                    Margin="8,0"
                    Stretch="Uniform"
                    Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock
                            x:Name="LyricSoundBlock"
                            Grid.Row="2"
                            Text="{x:Bind LyricSound, Mode=OneWay}"
                            TextAlignment="Center"
                            TextWrapping="WrapWholeWords">
                            <TextBlock.RenderTransform>
                                <CompositeTransform />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock
                            x:Name="WordLyricContainer"
                            Margin="8,0"
                            Style="{StaticResource TitleTextBlockStyle}"
                            TextAlignment="Center"
                            TextWrapping="WrapWholeWords">
                            <TextBlock.RenderTransform>
                                <CompositeTransform />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock
                            x:Name="LyricTextBlock"
                            Margin="8,0"
                            HorizontalAlignment="Center"
                            d:Text="Some Text"
                            RenderTransformOrigin="0.5,0.5"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind LyricText, Mode=OneWay}"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            <TextBlock.RenderTransform>
                                <CompositeTransform />
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <TextBlock
                            x:Name="LyricTranslationBlock"
                            Margin="20,0"
                            HorizontalAlignment="Center"
                            RenderTransformOrigin="0.5,0.5"
                            Text="{x:Bind LyricTranslation, Mode=OneWay}"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            <TextBlock.RenderTransform>
                                <CompositeTransform />
                            </TextBlock.RenderTransform>
                        </TextBlock>
                    </StackPanel>

                </Viewbox>

            </Grid>
        </Grid>
        <Grid
            x:Name="PlayerGrid"
            Grid.Row="1"
            Height="40"
            Margin="8,0">
            <Button
                x:Name="LikeButton"
                Grid.Column="0"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="LikeButton_Click"
                Opacity="0">
                <FontIcon
                    x:Name="IconLiked"
                    FontSize="14"
                    Glyph="&#xE00B;" />
                <Button.RenderTransform>
                    <CompositeTransform />
                </Button.RenderTransform>
            </Button>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="preBtn"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="MovePrevious"
                    Opacity="0.6">
                    <FontIcon FontSize="14" Glyph="&#xF8AC;" />
                    <Button.RenderTransform>
                        <ScaleTransform x:Name="preScale" CenterX="7" CenterY="14" />
                    </Button.RenderTransform>
                </Button>
                <Button
                    x:Name="BtnPlayStateChange"
                    AutomationProperties.AcceleratorKey="Space"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="ChangePlayState"
                    Opacity="0.6">
                    <FontIcon x:Name="PlayStateIcon" Glyph="&#xEDB5;" />
                    <Button.RenderTransform>
                        <ScaleTransform x:Name="stateScale" CenterX="7" CenterY="14" />
                    </Button.RenderTransform>
                </Button>
                <Button
                    x:Name="nextBtn"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="MoveNext"
                    Opacity="0.6">
                    <FontIcon FontSize="14" Glyph="&#xF8AD;" />
                    <Button.RenderTransform>
                        <ScaleTransform x:Name="nextScale" CenterX="7" CenterY="14" />
                    </Button.RenderTransform>
                </Button>
            </StackPanel>
            <Button
                x:Name="ExitButton"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="ExitButton_Click"
                Visibility="{x:Bind PlayProgress.Visibility, Mode=OneWay}">
                <FontIcon FontSize="14" Glyph="&#xE78B;" />
                <Button.RenderTransform>
                    <CompositeTransform />
                </Button.RenderTransform>
            </Button>
        </Grid>
        <muxc:ProgressBar
            x:Name="PlayProgress"
            Grid.Row="1"
            VerticalAlignment="Bottom"
            Maximum="{x:Bind Mode=OneWay, Path=TotalProgress}"
            Opacity="0"
            Value="{x:Bind NowProgress, Mode=OneWay}" />
        <Rectangle
            x:Name="AlbumImage"
            Grid.Row="3"
            Height="256"
            HorizontalAlignment="Stretch"
            Canvas.ZIndex="1">
            <Rectangle.Fill>
                <ImageBrush x:Name="AlbumImageBrush" Stretch="UniformToFill">
                    <ImageBrush.ImageSource>
                        <BitmapImage x:Name="AlbumImageBrushSource" />
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="AlbumImage.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="AlbumImage.Visibility" Value="Collapsed" />
                        <Setter Target="LyricViewBox.MaxHeight" Value="80" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="256" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="AlbumImage.Visibility" Value="Collapsed" />
                        <Setter Target="LyricViewBox.MaxHeight" Value="90" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="410" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="AlbumImage.Visibility" Value="Visible" />
                        <Setter Target="LyricViewBox.MaxHeight" Value="80" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="480" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="AlbumImage.Visibility" Value="Visible" />
                        <Setter Target="LyricViewBox.MaxHeight" Value="90" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>